<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <div class="card mt-5">
            <div class="card-header">
                <h3>Make a Question</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/question">
                    <label for="title">Title</label>
                    <input type="text" placeholder="Title" class="form-control" id="title" name="title">
                    <label for="description">Description</label>
                    <textarea placeholder="Write your question here" class="form-control" id="description" name="description"></textarea>
                    <br>
                    <button class="btn btn-primary">Ask</button>
                </form>
            </div>
        </div>
    </div>
</body>
